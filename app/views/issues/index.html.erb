<h1>Listing issues</h1>

<table>
  <thead>
    <tr>
      <th>Project</th>
      <th>Tracker</th>
      <th>Subject</th>
      <th>Description</th>
      <th>Status</th>
      <th>Priority</th>
      <th>Due date</th>
      <th>Author</th>
      <th>Assigned to</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <td><%= issue.project_id %></td>
        <td><%= issue.tracker_id %></td>
        <td><%= issue.subject %></td>
        <td><%= issue.description %></td>
        <td><%= issue.status_id %></td>
        <td><%= issue.priority_id %></td>
        <td><%= issue.due_date %></td>
        <td><%= issue.author_id %></td>
        <td><%= issue.assigned_to_id %></td>
        <td><%= link_to 'Show', issue %></td>
        <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
        <td><%= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Issue', new_issue_path %>
